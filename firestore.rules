rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Public users collection
    match /public_users/{userId} {
      allow read: if isSignedIn();
      // Only allow users to write their own document and validate the data
      allow write: if isOwner(userId) && 
        request.resource.data.keys().hasOnly(['displayName', 'displayNameLower', 'photoURL', 'joinedAt']) &&
        request.resource.data.displayNameLower == request.resource.data.displayName.lower();
    }

    // User profiles (private data)
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
      
      // User preferences
      match /preferences/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Admin collection
    match /admins/{adminId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == adminId;
    }

    // Watchlist items
    match /watchlists/{userId}/items/{itemId} {
      allow read, write: if isOwner(userId);
    }
    
    // Ratings
    match /users/{userId}/ratings/{ratingId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Following
    match /users/{userId}/following/{followedId} {
      allow read: if isSignedIn();
      // Allow user to manage their own following list
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Followers
    match /users/{userId}/followers/{followerId} {
      allow read: if isSignedIn();
      // Allow the follower to add/remove themselves from someone's followers list
      allow write: if isSignedIn() && request.auth.uid == followerId;
    }

    // Activity Feed
    match /activity/{activityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Notifications
    match /users/{userId}/notifications/{notificationId} {
      allow read, write: if isOwner(userId);
    }

    // Shared Lists
    match /users/{userId}/shared/{listId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Allow read access to public collections
    match /{document=**} {
      allow read: if isSignedIn();
    }
  }
}