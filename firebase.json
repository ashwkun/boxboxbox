{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/brandkit",
        "destination": "/brandkit.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
} 